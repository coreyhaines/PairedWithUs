<div class='box'>
  <h1>Pairing Sessions</h1>
  <ul class='detail session_listing'>
    <% @sessions.each do |session| %>
      <li class='session'>
        <div class='date_as_calendar'>
          <div class='month'>
            <%= session.start.strftime("%b") %>
          </div>
          <div class='day'>
            <%= session.start.strftime("%e") %>
          </div>
        </div>
        <ul class='participants box'>
          <li><div class='name'><%= session.pair_1.name %></div></li>
          <li><div class='name'><%= session.pair_2.name %></div></li>
        </ul>
      </li>
    <% end %>

  </ul>
</div>
